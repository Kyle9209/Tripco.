<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tripco.www.tripco.ui.CandidateInfoActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="장소 이름을 입력하세요,"
                    android:text="위치명"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/complete_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary"
                    android:text="완료" />


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/candidateImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/cat" />

                <EditText
                    android:id="@+id/trip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/candidateImg"
                    android:layout_margin="15dp"
                    android:text="여행일정 제목"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/trip_title"
                    android:layout_alignBottom="@+id/trip_title"
                    android:layout_toEndOf="@+id/trip_title"
                    android:layout_toRightOf="@+id/trip_title" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="정보유형"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/category1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/btn_star_big_on" />

                    <ImageView
                        android:id="@+id/cateogry2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/btn_star_big_off" />

                    <ImageView
                        android:id="@+id/cateogry3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/btn_star_big_off" />

                    <ImageView
                        android:id="@+id/cateogry4"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/btn_star_big_off" />

                </LinearLayout>

                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/location_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위치명"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:textSize="20sp" />

                </LinearLayout>

                <Spinner
                    android:id="@+id/days_spin"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:padding="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="메모" />

                    <EditText
                        android:id="@+id/memo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="-메모1"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/memo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="-메모2"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>