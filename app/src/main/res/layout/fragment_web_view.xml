<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tripco.www.tripco.fragment.WebViewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- backLayout -->
        <LinearLayout
            android:id="@+id/backLayout"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0">

                <EditText
                    android:maxLines="1"
                    android:inputType="textUri"
                    android:id="@+id/inputAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="주소를 입력하세요." />

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/searchBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_menu_search" />

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/saveBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_menu_save" />

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/DetailSaveBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_menu_add" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/webViewPb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="0"
                android:max="100" />

            <WebView
                android:layout_weight="1"
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- frontLayout -->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/frontLayout"
            android:orientation="vertical"
            android:background="#99000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- titleBar -->
            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/title"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:text="title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:textColor="#fff"
                    android:id="@+id/completeBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complete"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- body -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- line1 -->
                <LinearLayout
                    android:visibility="visible"
                    android:padding="10dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/tour_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="관광" />

                    <Button
                        android:id="@+id/house_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="숙박" />

                    <Button
                        android:id="@+id/restaurant_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="식당" />

                    <Button
                        android:id="@+id/trans_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="교통" />

                </LinearLayout>

                <!-- line2 -->
                <LinearLayout
                    android:visibility="gone"
                    android:padding="10dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:hint="위치검색"
                            android:layout_width="150dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/search_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_search" />

                    </LinearLayout>


                </LinearLayout>

                <!-- line3 -->
                <LinearLayout
                    android:visibility="visible"
                    android:padding="10dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <com.rey.material.widget.Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <!-- footer -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:visibility="invisible"
                    android:textColor="#fff"
                    android:id="@+id/before_Btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이전"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <Button
                    android:textColor="#fff"
                    android:id="@+id/next_Btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- googleMap -->
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
