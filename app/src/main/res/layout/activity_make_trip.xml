<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tripco.www.tripco.ui.MakeTripActivity">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/custom_toolbar_layout"/>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 제목 -->
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:maxLength="10"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="23sp"
                android:hint="여행 제목"
                android:id="@+id/title_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:visibility="invisible"
                android:id="@+id/title_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/checked"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <!-- 제목 글자수 -->
        <TextView
            android:id="@+id/title_cnt_tv"
            android:text="0/10"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 달력 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/calendar_btn_line"
                android:gravity="center"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textSize="20sp"
                    android:background="#fff"
                    android:text="달력"
                    android:id="@+id/calendar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/calendar_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/checked" />

        </RelativeLayout>

        <!-- 누구 -->
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textSize="20sp"
                    android:background="#fff"
                    android:text="누구 (선택)"
                    android:id="@+id/who_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:visibility="invisible"
                android:id="@+id/who_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/checked"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <!-- 해시태그 -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb1"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#힐링"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb2"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#감성"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb3"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#먹방"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb4"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#쇼핑"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb13"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#가성비"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb5"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#조용"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb6"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#활발"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb7"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#답사"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb8"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#레저"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb14"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#여유"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb9"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#혼자"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb10"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#친구"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb11"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#가족"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb12"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#커플"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_margin="10dp"
                    android:background="@drawable/hashtag"
                    android:checked="false"
                    android:id="@+id/hashtag_cb15"
                    android:button="@null"
                    android:textSize="20sp"
                    android:text="#즉흥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

