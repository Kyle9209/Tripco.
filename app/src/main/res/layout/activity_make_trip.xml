<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.tripco.www.tripco.ui.MakeTripActivity">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/custom_toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- 제목 -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/title_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="여행제목*"
                        android:inputType="text"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textCursorDrawable="@null"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:visibility="invisible"
                    android:id="@+id/clear_title_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@drawable/places_ic_clear" />

            </RelativeLayout>

            <!-- 제목 글자수 -->
            <TextView
                android:id="@+id/title_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0/10" />

        </LinearLayout>

        <!-- 달력 -->
        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/calendar_btn_line"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/calendar_icon"
                android:layout_weight="0"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:padding="5dp"
                android:id="@+id/calendar_tv"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="언제?*"
                android:textSize="18sp" />

            <ImageView
                android:src="@drawable/right_next_btn"
                android:layout_weight="0"
                android:layout_width="35dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- 누구 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/who_btn_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/alarm_icon"
                    android:layout_weight="0"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/who_tv"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="누구와?(선택)"
                    android:textSize="18sp" />

                <ImageView
                    android:src="@drawable/right_next_btn"
                    android:layout_weight="0"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#aeadad"
                android:id="@+id/discon_partner_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="연결끊기" />

        </RelativeLayout>

        <!-- 해시태그 제목 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤?"
                android:textColor="#000"
                android:textSize="18sp" />


                <GridLayout

                    android:columnCount="3"
                    android:id="@+id/hashtag_gl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="qwe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="qwe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="qwe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="qwe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </GridLayout>


        </LinearLayout>

